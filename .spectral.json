{
    "functions": [
        "toggle",
        "stepOrders",
        "register",
        "type",
        "description",
        "properties",
        "items",
        "control",
        "keyId"
    ],
    "rules": {
        "stepProps": {
            "description": "Step Required property",
            "message": "Step is missing the {{property}}",
            "given": "$.properties.*",
            "severity": "error",
            "then": [
                {
                    "field": "type",
                    "function": "truthy"
                },
                {
                    "field": "description",
                    "function": "truthy"
                },
                {
                    "field": "properties",
                    "function": "truthy"
                }
            ]
        },
        "rootProps": {
            "description": "Root required property",
            "message": "Root is missing the {{property}}",
            "given": "$",
            "severity": "error",
            "then": [
                {
                    "field": "type",
                    "function": "truthy"
                },
                {
                    "field": "title",
                    "function": "truthy"
                },
                {
                    "field": "properties",
                    "function": "truthy"
                },
                {
                    "field": "stepOrders",
                    "function": "truthy"
                }
            ]
        },
        "type": {
            "given": "$.properties.*.properties.*",
            "severity": "error",
            "then": [
                {
                    "function": "type"
                }
            ]
        },
        "description": {
            "given": "$.properties.*.properties.*",
            "severity": "error",
            "then": [
                {
                    "function": "description"
                }
            ]
        },
        "toggle": {
            "given": "$.properties.*.properties.*",
            "severity": "error",
            "then": {
                "function": "toggle"
            }
        },
        "properties": {
            "given": "$.properties.*.properties.*",
