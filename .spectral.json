        "items": {
            "given": "$.properties.*.properties.*",
            "severity": "error",
            "then": {
                "function": "items"
            }
        },
        "control": {
            "given": "$.properties.*.properties.*",
            "severity": "error",
            "then": {
                "function": "control"
            }
        },
        "keyId": {
            "given": "$.properties.*.properties.*",
            "severity": "error",
            "then": {
                "function": "keyId"
            }
        },
        "stepOrders": {
            "given": "$",
            "severity": "error",
            "then": {
                "function": "stepOrders"
            }
        },
        "register": {
            "given": "$.properties.*.properties.*",
            "severity": "error",
            "then": {
                "function": "register"
            }
